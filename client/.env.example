# =============================================================================
# External Service API Keys
# =============================================================================

# Cardano Forum API Key for accessing forum data
# Used by ambassadorService.ts to fetch user profiles and activities
CARDANO_FORUM_API_KEY=your_forum_api_key_here

# =============================================================================
# Cardano Network Configuration
# =============================================================================

# Cardano Network Environment (mainnet or preprod)
# This determines which Cardano network your app will connect to
# Valid values: "mainnet" | "preprod"
# Default: "preprod" (if not set)
NEXT_PUBLIC_NETWORK=preprod

# =============================================================================
# Oracle Setup UTXOs
# =============================================================================

# Oracle Setup Transaction Hash and Output Index
NEXT_PUBLIC_ORACLE_SETUP_TX_HASH=your_oracle_setup_tx_hash_here
NEXT_PUBLIC_ORACLE_SETUP_OUTPUT_INDEX=0

# Counter Setup Transaction Hash and Output Index
NEXT_PUBLIC_COUNTER_SETUP_TX_HASH=your_counter_setup_tx_hash_here
NEXT_PUBLIC_COUNTER_SETUP_OUTPUT_INDEX=0

# =============================================================================
# Reference Transaction Scripts - Membership Intent
# =============================================================================

NEXT_PUBLIC_MEMBERSHIP_INTENT_MINT_TX_HASH=your_membership_intent_mint_tx_hash
NEXT_PUBLIC_MEMBERSHIP_INTENT_MINT_OUTPUT_INDEX=0
NEXT_PUBLIC_MEMBERSHIP_INTENT_SPEND_TX_HASH=your_membership_intent_spend_tx_hash
NEXT_PUBLIC_MEMBERSHIP_INTENT_SPEND_OUTPUT_INDEX=1

# =============================================================================
# Reference Transaction Scripts - Member
# =============================================================================

NEXT_PUBLIC_MEMBER_MINT_TX_HASH=your_member_mint_tx_hash
NEXT_PUBLIC_MEMBER_MINT_OUTPUT_INDEX=0
NEXT_PUBLIC_MEMBER_SPEND_TX_HASH=your_member_spend_tx_hash
NEXT_PUBLIC_MEMBER_SPEND_OUTPUT_INDEX=1

# =============================================================================
# Reference Transaction Scripts - Propose Intent
# =============================================================================

NEXT_PUBLIC_PROPOSE_INTENT_MINT_TX_HASH=your_propose_intent_mint_tx_hash
NEXT_PUBLIC_PROPOSE_INTENT_MINT_OUTPUT_INDEX=0
NEXT_PUBLIC_PROPOSE_INTENT_SPEND_TX_HASH=your_propose_intent_spend_tx_hash
NEXT_PUBLIC_PROPOSE_INTENT_SPEND_OUTPUT_INDEX=1

# =============================================================================
# Reference Transaction Scripts - Proposal
# =============================================================================

NEXT_PUBLIC_PROPOSAL_MINT_TX_HASH=your_proposal_mint_tx_hash
NEXT_PUBLIC_PROPOSAL_MINT_OUTPUT_INDEX=0
NEXT_PUBLIC_PROPOSAL_SPEND_TX_HASH=your_proposal_spend_tx_hash
NEXT_PUBLIC_PROPOSAL_SPEND_OUTPUT_INDEX=1

# =============================================================================
# Reference Transaction Scripts - Sign Off Approval
# =============================================================================

NEXT_PUBLIC_SIGN_OFF_APPROVAL_MINT_TX_HASH=your_sign_off_approval_mint_tx_hash
NEXT_PUBLIC_SIGN_OFF_APPROVAL_MINT_OUTPUT_INDEX=0
NEXT_PUBLIC_SIGN_OFF_APPROVAL_SPEND_TX_HASH=your_sign_off_approval_spend_tx_hash
NEXT_PUBLIC_SIGN_OFF_APPROVAL_SPEND_OUTPUT_INDEX=1

# =============================================================================
# Reference Transaction Scripts - Treasury
# =============================================================================

NEXT_PUBLIC_TREASURY_SPEND_TX_HASH=your_treasury_spend_tx_hash
NEXT_PUBLIC_TREASURY_SPEND_OUTPUT_INDEX=0
NEXT_PUBLIC_TREASURY_WITHDRAWAL_TX_HASH=your_treasury_withdrawal_tx_hash
NEXT_PUBLIC_TREASURY_WITHDRAWAL_OUTPUT_INDEX=1

# =============================================================================
# Network-Specific Configuration Examples
# =============================================================================

# For Preprod (Testnet) - Replace with your actual preprod values
# NEXT_PUBLIC_NETWORK=preprod
# NEXT_PUBLIC_ORACLE_SETUP_TX_HASH=8f1d4e5c2a7b9e8f6d3c2b1a0f9e8d7c6b5a4f3e2d1c0b9a8f7e6d5c4b3a2f1e
