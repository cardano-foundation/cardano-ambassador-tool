    "@tiptap/starter-kit": "^3.6.1",
    "cbor": "^10.0.11",
    "clsx": "^2.1.1",
    "copy-webpack-plugin": "^13.0.0",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "dotenv": "^17.2.0",
    "emoji-picker-react": "^4.14.0",
    "framer-motion": "^12.23.9",
    "jose": "^6.0.12",
    "lucide-react": "^0.525.0",
