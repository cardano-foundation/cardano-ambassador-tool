{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint ./src --fix",
    "prepare": "cd .. && husky ./client/.husky",
    "commitlint": "commitlint --edit",
    "type-check": "tsc --project tsconfig.json --noEmit",
