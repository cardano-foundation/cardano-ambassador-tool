  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  },
  "dependencies": {
    "@meshsdk/core": "^1.9.0-beta.62",
    "@meshsdk/react": "^1.9.0-beta.62",
