{
  "name": "@sidan-lab/cardano-ambassador-tool",
  "description": "The Typescript SDK for the Cardano Ambassador Tool",
  "license": "Apache-2.0",
  "version": "0.0.15",
  "homepage": "https://github.com/sidan-lab/cardano-ambassador-tool",
  "author": {
    "name": "SIDAN Lab",
    "email": "contact@sidan.io"
  },
  "files": [
    "dist/**"
  ],
  "keywords": [
    "Cardano",
    "Cardano Ambassador",
    "Typescript",
    "SDK"
  ],
  "main": "./dist/index.cjs",
  "browser": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:plutus": "tsx test-plutus-data.ts",
    "ci": "npm install && npm run build"
  },
  "dependencies": {
    "@meshsdk/core": "1.9.0-beta.56",
    "@meshsdk/core-csl": "1.9.0-beta.56",
    "blakejs": "^1.2.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "eslint": "^8",
    "eslint-config-next": "15.0.3",
    "jest": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.5",
    "tsup": "^8.0.2",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
